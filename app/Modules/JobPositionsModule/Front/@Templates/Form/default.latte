{block content}
	<div id="banner">
		<h1 class="job_position" n:block=title>{$jobPosition->getTitle()}</h1>
	</div>
	<div class="container">
		<div class="job_position_location">
			<p class="bold">Location: {$jobPosition->getLocation()}</p>
		</div>
		<p class="bold">Description:</p>
		{$jobPosition->getContent()|noescape}

		<div class="form">
			<p class="bold">Interested? Please Submit your Application: </p>
			{include form.latte}
		</div>
	</div>
{/block}
